<%- include('./includes/head.ejs') %>

<span style="position: fixed; top: 0; width: 100%; background-color: red; color: aqua; text-align: center;">
	<% if (typeof message != 'undefined' && message) { %>
	<%=message%>
	<% } %>

</span>

<body id="page-top">


	<%- include('./includes/nav.ejs') %>
	<!-- Intro Header -->
	<header class="masthead">
		<div class="intro-body">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 mx-auto">
						<h2>A testing platform to enhance your <span style="text-decoration: underline;">User's Experience</span></h2>
							<div class="col-8 mx-auto mb-5">
								<input placeholder="Put your website address here." name="webURL" id="webURL" class="form-control" required>
						<a href="#start-test" class="btn btn-circle js-scroll-trigger mt-5">
							<i class="fa fa-angle-double-down animated"></i>
						</a>
					</div>
				</div>
			</div>
		</div>
	</header>

	<!-- About Section -->
	<section id="start-test" class="content-section text-center">
		<div class="container">
			<div class="row">
				<div class="col-sm-2 col-12"></div>
				<div class="col-12 col-sm-8">
					<div class="card">
						<div class="card-body">
							<h5 class="card-title text-black">Testing</h5>
							<p class="card-text text-black">Add items for your user to complete. If your user needs to log in to
								complete some tasks then do not use this
								form. This report will contain more information on user interaction with page.</p>
							<form name="noLog" action="/site/" method="post">
								<div class="row">
									<div class="col-12 mb-5">
										<input placeholder="URL" name="webURL" id="webURL" class="form-control" required>
									</div>
								</div>
								<div class="row text-black mb-3">
									<div class="col-3">Name</div>
									<div class="col-9">
										<input class="form-control" name="testName" placeholder="Give your test a name.">
									</div>
								</div>
								<div class="row text-black mb-3">
									<div class="col-3">1</div>
									<div class="col-9">
										<input class="form-control" name="task0" placeholder="Test Item" value="Our first test question">
									</div>
								</div>
								<div class="row text-black mb-3">
									<div class="col-3">2</div>
									<div class="col-9">
										<input class="form-control" name="task1" placeholder="Test Item" value="Our second test question">
									</div>
								</div>
								<div class="row text-black mb-3">
									<div class="col-3">3</div>
									<div class="col-8">
										<input class="form-control" name="task2" placeholder="Test Item" value="Our third test question">
									</div>
									<div class="col-1">
										<a href="">
											<i class="fa fa-plus-circle" aria-hidden="true"></i>
										</a>
									</div>
								</div>
								<div class="row">
								
									<div class="col-12">
										<button type="submit" id="submit" class="btn btn-default btn-sm">Submit</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
				<div class="col-sm-2 col-12"></div>
			</div>
		</div>
	</section>



	<%- include('./includes/footer.ejs') %>

	<%- include('./includes/scripts.ejs') %>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.0/socket.io.dev.js"></script>
	<script src="js/checkURL.js"></script>
	<!-- Custom scripts for this template -->
	<script src="js/grayscale.js"></script>

</body>

</html>