<%- include('./includes/head.ejs') %>
</head>

<%- include('./includes/copyNav.ejs') %>

<body id="page-top">


	<!-- About Section -->
	<section id="start-test" class="content-section text-center">
		<div class="container">
			<div class="row">
				<div class="col-sm-2 col-12"></div>
				<div class="col-12 col-sm-8">
					<div class="card">
						<div class="card-body">
							<h5 class="card-title text-black">Copy a test</h5>
							<p class="card-text text-black">Change the original items on your test.</p>
							<form name="noLog" action="/site/" method="post">
								<div class="row text-black" style="margin-bottom: 20px">
									<div class="col-3">Name</div>
									<div class="col-9">
										<input class="form-control" name="testName" placeholder="Name of Test" value="<%=newDoc.testName%>">
									</div>
								</div>


								<%for (var i=0; i < newDoc.questionArray.length; i++) {%>

								<div class="row text-black" style="margin-bottom: 20px">
									<div class="col-3">
										<%=i+1%>
									</div>
									<div class="col-9">
										<input class="form-control" name="task<%=i%>" placeholder="Test Item" value="<%=newDoc.questionArray[i]%>">
									</div>
								</div>

								<%}%>


								<div class="row">
									<div class="col-9">
										<input placeholder="URL" name="webURL" id="webURL" class="form-control" value="<%=newDoc.webURL%>" required>
									</div>
									<div class="col-3">
										<button type="submit" id="submit" class="btn btn-default btn-sm">Submit</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
				<div class="col-sm-2 col-12"></div>
			</div>
		</div>
	</section>




	<%- include('./includes/footer.ejs') %>


</body>

</html>